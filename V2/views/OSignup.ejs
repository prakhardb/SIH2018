<% include ./partials/header %>

<form class="form-horizontal register col-md-offset-4" action='' method="POST">
    <fieldset>
      <div id="legend">
        <legend class="">Register</legend>
      </div>
      <div class="control-group">
        <!-- Username -->
        <label class="control-label" >Enter your organisation</label>
        <div class="controls">
          <input type="text" name="Organisation" placeholder="" class="input-xlarge">
        </div>
      </div>

      <div class="control-group">
        <!-- Type of organisation -->
        <label class="control-label" >Type of Organisation</label>
        <div class="controls">
          <select name="typeoforg">
            <option>Public Bank</option>
            <option>Private Bank</option>
            <option>SFC's</option>
            <option>PSU's</option>
          </select>
        </div>
      </div>

      <div class="control-group">

      <div class="control-group">
        <!-- E-mail-->
        <label class="control-label" >Enter your E-mail</label>
        <div class="controls">
          <input type="email" name="username" placeholder="" class="input-xlarge">
        </div>
      </div>

      <div class="control-group">
        <!-- Password-->
        <label class="control-label" for="password">Password</label>
        <div class="controls">
          <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
        </div>
      </div>

      <div class="control-group">
        <!--Confirm Password -->
        <label class="control-label"  for="password_confirm">Password (Confirm)</label>
        <div class="controls">
          <input type="password" id="password_confirm" name="password_confirm" placeholder="" class="input-xlarge">
        </div>
      </div>

      <div class="control-group">
        <!-- Button -->
        <div class="controls">
          <button class="btn btn-success">Register</button>
        </div>
      </div>
    </fieldset>
  </form>
</body>
<% include ./partials/footer %>