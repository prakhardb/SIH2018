<html>
        <head>
            <title>Add Organisations</title>
            <link href="stylesheets/bootstrap.css" rel="stylesheet" />
        </head>

        <% if (!currentUser.isAdmin) { %>
            <h1>Please Login with Admin credentials</h1>
<a href="/"><strong>GO BACK</strong></a>
<% } else { %>
    <body>
        <div class="container">
            <div class="row offset-4">
                <h1>Add Organisation</h1>
            </div>
            <div style="width:30%; margin:25px auto;">
             <form action="/org/new" action="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="org[organisationName]" placeholder="Organisation name">
            </div>
            <div class="form-group">
                <select class="form-control" name="org[type]">
                    <option value="Public Bank">Public Bank</option>
                    <option value="Private Bank">Private Bank</option>
                    <option value="SFC">SFC</option>
                    <option value="NBFC">NBFC</option>
                </select>
            </div>
            <div class="form-group">
                <input class="form-control" type="url" name="org[img]" placeholder="Image Url">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Add Organisation">
            </div>
            </form>
            </div>
        </div>
    </body>

    <% } %>